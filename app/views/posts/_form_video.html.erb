<%= form_for @post, :html => {:multipart => true} do |f|%>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title, class: 'form-control'%>
  </p>
  <p>
    <%= f.file_field :video %>
  </p>
  <div class="form-group">
	
  	<%= f.label :text %>
  	<%= f.text_area :text, class: 'form-control', rows: '12' %>
  </div>
  <p>
    <%= f.label :remote_video_url, "Video URL" %><br />
    <%= f.text_field :remote_video_url %>
  </p>
  <p><%= f.submit class: 'btn btn-primary' %></p>
<% end %>
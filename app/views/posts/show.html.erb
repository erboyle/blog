<h2><%= @post.title %></h2>

<p>
<%= image_tag @post.image_url(:medium) if @post.image? %>
</p>
<p>
<%= video_tag @post.video_url if @post.video? %>
</p>


<p>
	<%= @post.text %>
</p>
<p> <%= 'Author: ' + @post.user.first_name %>

<p>Created at <%= @post.created_at %></p>



<h2>Tags</h2>
<p>
<% @tags.each do |tag| %>
	<% if @post.tags.include?( tag ) %>
		<span class="label label-success"><%= link_to( tag.name, { action: 'delete_tag', tag_id: tag.id }, :method => :delete, :style => 'color: white;' ) %></span>
	<% else %>
		<span class="label label-default"><%= link_to( tag.name, { action: 'add_tag', tag_id: tag.id }, :method => :post, :style => 'color: white;' ) %></span>
	<% end %>
<% end %>
</p>

<h2>Comments</h2>
<%= render @post.comments %>

<h2>Add a comment</h2>
<%= render "comments/form" %>
 
<%= link_to 'Edit Post', edit_post_path(@post), class: 'btn btn-default' %>
<%= link_to 'Back to Posts', posts_path, class: 'btn btn-default' %>


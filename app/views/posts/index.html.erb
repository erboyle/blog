<div class="row-fluid">
	<div class="col-md-10">
		<h1>Posts</h1>

		<% @post.each do |post| %>

		<article>
			<h2><%= link_to post.title, post_path(post) %></h2>
			<p><%= post.text %></p>
			<p><%= post.created_at %></p>
			<p>
			<% post.tags.each do |tag| %>
				<span class="label label-success"><%= tag.name %></span>
			<% end %>
			</p>
			<div>
				<p>
					<%= link_to 'Show', post_path(post), class: 'btn btn-default'%>
					<%= link_to 'Edit', edit_post_path(post), class: 'btn btn-default' %></td>
					<%= link_to 'Destroy', post_path(post), class: 'btn btn-default', method: :delete, data: { confirm: 'Are you sure you want to delete post "' + post.title + '"?'} %>
				</p>
			</div>
		</article>

		<hr>

		<% end %>

	</div>
	<div class="col-md-2">
		<h1>Tags</h1>
		<ul style="list-style-type: none; -webkit-padding-start: 0px;">
		<% @tag.each do |tag| %>
			<li><p class="label label-default"><%= link_to( tag.name, { action: 'tag', tag_id: tag.id }, :style => "color: white;" ) %></p></li>
		<% end %>
		</ul>
	</div>
</div>
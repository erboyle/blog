<%= form_for @post, :html => {:multipart => true} do |f| %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title, class: 'form-control' %>
  </p>
  <p>
    <%= f.file_field :audio %>
  </p>
 
  <div class="form-group">
	
  	<%= f.label :text %>
  	<%= f.text_area :text, class: 'form-control', rows: '12' %>
  </div>
 
  <p><%= f.submit class: 'btn btn-primary' %></p>
<% end %>
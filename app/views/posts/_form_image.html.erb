<%= form_for @post, :html => {:multipart => true} do |f| %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.file_field :image %>
  </p>
  <p>
    <%= f.label :remote_image_url, "Image URL" %><br />
    <%= f.text_field :remote_image_url %>
  </p>
  <p><%= f.submit class: 'btn btn-primary' %></p>
<% end %>